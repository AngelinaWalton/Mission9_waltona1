@page
@model Mission9_waltona1.Pages.CartModel
@{
}

@*alert bootstrap added*@
<div class="alert alert-primary" role="alert">
    @foreach (var i in Model.basket.Items)
    {
        <h3>The following book has been added to your cart: @i.Books.Title</h3>
    }
</div>
<h2>Your Cart</h2>

@*dark table bootstrap added*@
<table class="table table-bordered table-striped table-dark">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
        {
        <tr>
            <td>@i.Books.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Books.Price.ToString("c")</td>
            <td>@((i.Quantity * i.Books.Price).ToString("c"))</td>
        </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>